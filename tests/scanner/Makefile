# This Makefile is for running all the tests in scanner sub-folder.
# test/scanner Makefile
#  - builds the tokenize executable for printing scanned tokens from stdin

OCAMLC = ocamlc
OBJS = ../../_build/scanner.cmo tokenize.cmo
INCLUDES = -I ../../_build

default: tokenize

all:
	cd ..; make all

tokenize: $(OBJS)
	$(OCAMLC) $(INCLUDES) -o tokenize $(OBJS)

%.cmo: %.ml
	$(OCAMLC) $(INCLUDES) -c $<

%.cmi: %.mli
	$(OCAMLC) $(INCLUDES) -c $<

.PHONY: clean
clean:
	rm -f tokenize *.cmo *.cmi

# Generated by ocamldep *.ml
tokenize.cmo:
tokenize.cmx:
